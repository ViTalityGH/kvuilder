#:import SingleIconItem libs.components.lists.SingleIconItem

<NavDrawer>:
    orientation: 'vertical'
    
    MDBoxLayout:
        id: box_avatar
        orientation: 'vertical'

        Image:
            id: profile_img
            source: 'assets/images/logo.png'

    MDLabel:
        text: 'Your Name'
        size_hint_y: None
        height: self.texture_size[1]
        halign: 'center'
    
    AnchorLayout:
        anchor_x: 'center'
        
        MDChip:
            label: 'active'
            size_hint: None, None

    MDSeparator:
        size_hint_y: None
        height: '5dp'

    ScrollView:
        id: scroll
        size_hint_y: 1
        canvas.before:
            Color:
                rgba: .2,.2,.2,.2
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)

            # Items
