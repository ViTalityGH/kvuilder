<LoginScreen>:
    name: 'login'
    
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/abstract/1.jpg"

    MDBoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            anchor_x: "center"
            
            MDCard:
                orientation: "vertical"
                padding: "8dp"
                size_hint: None, None
                size: "280dp", "180dp"
        
                MDLabel:
                    text: "Log In"
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "center"
        
                Widget:
                    size_hint_y: None
                    height: "100dp"
                
                MDTextField:
                    hint_text: "Email or username"
                    mode: 'rectangle'
        
                MDTextField:
                    hint_text: "Password"
                    mode: 'rectangle'
                    password: True

            AnchorLayout:
                anchor_x: "center"
                
                MDRoundFlatButton:
                    text: 'Log In'
