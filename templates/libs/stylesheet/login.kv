<LoginScreen>:
    name: 'login'
    
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/abstract/1.jpg"

    MDBoxLayout:
        orientation: 'vertical'

        MDCard:
            border_radius: "25dp"
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "280dp", "180dp"
            pos_hint: {"center_x": .5, "center_y": .5}
    
            MDLabel:
                text: "Log In"
                size_hint_y: None
                height: self.texture_size[1]
                halign: "center"
    
            Widget:
                size_hint_y: None
                height: "100dp"
            
            MDTextField:
                hint_text: "Email or username"
                mode: 'rectangle'
    
            MDTextField:
                hint_text: "Password"
                mode: 'rectangle'
                password: True
    
            MDRoundFlatButton:
                text: 'Log In'
                pos_hint: {"center_x": .5}
